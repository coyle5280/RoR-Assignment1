<h1 class="jumbotron">Listing Sections</h1>
<div class="form-group">
<%= form_tag(search_sections_url, method: "get") do %>
    <%=label_tag(:q, "Search for:")%>
    <%= text_field_tag(:q) %>
    <%=submit_tag("Search")%>
<% end %>
</div>
<table class="table-striped table table-bordered">
  <thead>
    <tr>
      <th>Course</th>
      <th>Professor</th>
      <th>Number</th>
      <th>Location</th>
      <th>Section Time</th>
      <th>Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course.name %></td>
        <td><%= section.professor.name %></td>
        <td><%= section.number %></td>
        <td><%= section.location %></td>
        <td><%= section.sectionTime %></td>
        <td><%= %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

